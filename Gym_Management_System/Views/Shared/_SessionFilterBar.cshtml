@model GymManagement.ViewModels.SessionFilterBarViewModel

<form method="get" id="filterForm" class="d-flex flex-wrap justify-content-start align-items-center gap-3">
    <!-- Branch Dropdown -->
    <select class="form-select px-4 py-2 rounded-4 border-0 shadow-sm"
            style="background-color: #f5f5f5; min-width: 200px;  margin:1rem"
            name="branch"
            onchange="document.getElementById('filterForm').submit()">
        <option value="">All Branches</option>
        @foreach (var branch in Model.Branches)
        {
            <option value="@branch" selected="@(branch == Model.SelectedBranch ? "selected" : null)">
                @branch
            </option>
        }
    </select>

    <!-- Session Name Dropdown -->
    <select class="form-select px-4 py-2 rounded-4 border-0 shadow-sm"
            style="background-color: #f5f5f5; min-width: 200px; margin:1rem"
            name="selectedSessionName"
            onchange="document.getElementById('filterForm').submit()">
        <option value="">All Sessions</option>
        @foreach (var name in Model.SessionNames.Distinct())
        {
            <option value="@name" selected="@(name == Model.SelectedSessionName ? "selected" : null)">
                @name
            </option>
        }
    </select>

    <!-- Trainer Name Dropdown -->
    <select class="form-select px-4 py-2 rounded-4 border-0 shadow-sm"
            style="background-color: #f5f5f5; min-width: 200px;  margin:1rem"
            name="selectedTrainerName"
            onchange="document.getElementById('filterForm').submit()">
        <option value="">All Trainers</option>
        @foreach (var trainer in Model.TrainerNames.Distinct())
        {
            <option value="@trainer" selected="@(trainer == Model.SelectedTrainerName ? "selected" : null)">
                @trainer
            </option>
        }
    </select>
</form>
